<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.sidia.ims.imsphone.dialer.DialerFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_dailer">

        <action
            android:id="@+id/action_DialerFragment_to_AboutFragment"
            app:destination="@+id/nav_about"
            />
        <action
            android:id="@+id/action_DialerFragment_to_SettingsFragment"
            app:destination="@+id/nav_settings"
            />
    </fragment>
    <fragment
        android:id="@+id/nav_settings"
        android:name="com.sidia.ims.imsphone.settings.SettingsFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_settings">

        <action
            android:id="@+id/action_SettingsFragment_to_DialerFragment"
            app:destination="@+id/nav_home"
            />
    </fragment>
    <fragment
        android:id="@+id/nav_about"
        android:name="com.sidia.ims.imsphone.activities.ui.mainactivity.AboutFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_about">

        <action
            android:id="@+id/action_AboutFragment_to_DialerFragment"
            app:destination="@+id/nav_home"
            />
    </fragment>

    <fragment
        android:id="@+id/nav_history"
        android:name="com.sidia.ims.imsphone.history.HistoryFragment"
        android:label="@string/nav_history"
        tools:layout="@layout/fragment_history">
    </fragment>
</navigation>